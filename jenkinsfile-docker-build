pipeline {
    agent none
    environment {
        HOME = '.'
        appName = "basic-crud-app"
        registry = "hernanku/$appName" 
        registryCredential = 'dockerhub-creds'
        dockerImage = '' 
    }
    stages {
        stage('Docker build') {
            agent {
                label 'docker-agent'
            }
            steps { 
                script { 
                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 
                }
            } 
        }
        stage('Docker push') {
            agent {
                label 'docker-agent'
            }
            steps {
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                        dockerImage.push 'latest'
                    }
                }
            }
        }
        stage('Clean Workspace') {
            agent any
            steps {
                echo 'Cleaning docker images'
                sh "docker logout"
                sh "docker rmi hernanku/basic-crud-app:$BUILD_NUMBER"
                sh "docker rmi hernanku/basic-crud-app:latest"
                echo 'Cleaning workspace'
                cleanWs()
            }
        }
    }
}

