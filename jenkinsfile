pipeline {
     agent none
    environment {
        HOME = '.'
        def uploadSpec = """{
        "files": [
            {
                "pattern": "dist/*",
                "target": "basic-crud-app/dev/"
            }
        ]
    }"""
    }
    stages {
        stage('Install app dependencies') {
            agent {
                docker {
                    label 'docker-agent'
                    image 'node:13.12.0'
                }
            }
            steps {
                echo 'Running npm install'
                sh 'npm install'
            }
        }
        stage('Code Build') {
            agent {
                docker {
                    label 'docker-agent'
                    image 'node:13.12.0'
                }
            }
            steps {
                echo 'Running npm build'
                sh 'npm run build'
            }
        }
        stage ('Upload file') {
            agent {
                label 'docker-agent'
            }
            steps {
                rtUpload (
                    serverId: 'artifactory-local',
                    spec: 'uploadSpec'
                )
            }
        }
    }
}
