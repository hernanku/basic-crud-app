pipeline {
    agent none
    environment {
        HOME = '.'
        appName = "basic-crud-app"
        registry = "hernanku/$appName" 
        registryCredential = 'dockerhub-creds'
        dockerImage = '' 
    }
    stages {
        stage('Install app dependencies') {
            agent {
                docker {
                    label 'docker-agent'
                    image 'node:13.12.0'
                }
            }
            steps {
                echo 'Running npm install'
                sh 'npm install'
            }
        }
        stage('Code Build') {
            agent {
                docker {
                    label 'docker-agent'
                    image 'node:13.12.0'
                }
            }
            steps {
                echo 'Running npm build'
                sh 'npm run build'
            }
        }
        stage ('Upload file') {
            agent {
                label 'docker-agent'
            }
            steps {
                rtServer (
                    id: 'artifactory-test',
                    url: 'http://10.0.0.64:8082/artifactory',
                    credentialsId: 'local-artifactory'
                )

                rtUpload (
                    serverId: 'artifactory-test',
                    specPath: './upload-spec.json'
                )
            }
        }
        stage('Docker build') { 
            steps { 
                script { 
                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 
                }
            } 
        }
        stage('Docker push') {
            steps {
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                        dockerImage.push 'latest'
                    }
                }
            }
        } 
        stage('Clean Workspace') {
            agent any
            steps {
                echo 'Cleaning docker images'
                sh "docker rmi hernanku/basic-crud-app:$BUILD_NUMBER"
                sh "docker rmi hernanku/basic-crud-app:latest"
                echo 'Cleaning workspace'
                cleanWs()
            }
        }
    }
}

