pipeline {
    agent {
        docker {
            label 'docker-agent'
            image 'node:13.12.0'
        }
    }
    environment {
        HOME = '.'
    }
    stages {
        stage('Install app dependencies') {
            steps {
                echo 'Running npm install'
                sh 'npm install'
            }
        }
        stage('Code Build') {
            steps {
                echo 'Running npm build'
                sh 'npm run build'
            }
        }
        stage ('Upload file') {
            steps {
                rtServer (
                    id: 'artifactory-test',
                    url: 'http://10.0.0.64:8082/artifactory',
                    credentialsId: 'local-artifactory'
                )

                rtUpload (
                    serverId: 'artifactory-test',
                    specPath: './upload-spec.json'
                )
            }
        }
        stage('Clean Workspace') {
            steps {
                echo 'Cleaning workspace'
                cleanWs()
            }
        }
    }
}
