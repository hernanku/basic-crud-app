pipeline {
     agent none
    environment {
        HOME = '.'
    stages {
        stage('Install app dependencies') {
            agent {
                docker {
                    label 'docker-agent'
                    image 'node:13.12.0'
                }
            }
            steps {
                echo 'Running npm install'
                sh 'npm install'
            }
        }
        stage('Code Build') {
            agent {
                docker {
                    label 'docker-agent'
                    image 'node:13.12.0'
                }
            }
            steps {
                echo 'Running npm build'
                sh 'npm run build'
            }
        }
        stage ('Upload file') {
            agent {
                label 'docker-agent'
            }
            steps {
                rtUpload (
                    serverId: 'artifactory-local',
                    credentialsId: 'local-artifactory',
                    spec: """{
                        "files": [
                            {
                                "pattern": "dist/*",
                                "target": "basic-crud-app/dev/"
                            }
                        ]
                    }"""
                )
            }
        }
        stage ('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: 'artifactory-local'
                )
            }
        }
    }
}
